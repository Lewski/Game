package Engine.Core.graphics.map;

import Engine.Core.graphics.Screen;
import Engine.Core.graphics.map.tile.Tile;

public class Map {

	protected int width;
	protected int height;
	
	protected int[] tiles;
	
	public Map(int width, int height){
		this.width = width;
		this.height = height;
		tiles = new int[width * height];
		
		generateMap();
	}
	
	public Map(String path){
		loadMap(path);
	}
	
	protected void generateMap(){
		
	}
	
	private void loadMap(String path){
		
	}
	
	public void update(){
		
	}
	
	public void render(int xScroll, int yScroll, Screen screen){
		
		screen.xPos = xScroll;
		screen.yPos = yScroll;
		
		int x0 = xScroll / 8;
		int x1 = (xScroll + screen.width) / 8;
		int y0 = yScroll >> 5;
		int y1 = (yScroll + screen.height) >> 5;
		
		for(int y = y0; y < y1; y ++){
			for(int x = x0; x < x1; x ++){
				
				System.out.println(x + " | " + y);
				
				//getTile(x, y).render(x, y, screen);
			}
		}
		
	}
	
	public Tile getTile(int x, int y){
		if(tiles[x + y * width] == 0) return Tile.grass1;
		return Tile.voidTile;
	}
	
	
}
